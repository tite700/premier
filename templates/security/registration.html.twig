{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription sur le site</h1>

    {{ form_start(form) }}
    <br>
    <div class="form-group">
        {{ form_row(form.email, {'attr' : {'placeholder' : 'Adresse e-mail'}}) }}
    </div>
    <br>
    <div class="form-group">
        {{ form_row(form.username, {'attr' : {'placeholder' : 'Nom d\'utilisateur'}} ) }}
    </div>
    <br>
    <div class="form-group">
        {{ form_row(form.password, {'attr' : {'placeholder' : 'Mot de passe'}}) }}
    </div>
    <br>
    <div class="form-group">
        {{ form_row(form.confirm_password, {'attr' : {'placeholder' : 'Confirmez votre mot de passe'}}) }}
    </div>
    <br>
    <button type="submit" class="btn-success">Inscription ici !!</button>
    {{ form_end(form) }}

{% endblock %}